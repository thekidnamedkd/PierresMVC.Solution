@using PierresMVC.Models;

@{
  Layout = "_Layout";
}

<h1>Orders</h1>
@if (Model.Count == 0)
{
  <h4>There are no orders at this time.</h4>
}

  @foreach (Order order in Model)
  {
    <h4>+ <a href='/orders/@order.Id'>@order.OrderDesc</a></h4>
  }


<form action="/orders/new">
  <button type="submit" name="button">Add Order</button>
</form>

<form action="/orders/delete" method="post">
  <button type="submit" name="button">Clear All Orders</button>
</form>