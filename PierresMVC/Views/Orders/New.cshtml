@{
  Layout = "_Layout";
}

<h1>New Order Form:</h1>

<form action="/vendors/@Model.Id/orders/ " method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <h3>Description (basic summary of order):</h3>
  <input id="orderDesc" name="orderDesc" type="text">
  <h3>Price (dollar amount only):</h3>
  <input id="orderPrice" name="orderPrice" type="text">
  <h3>Date:</h3>
  <input id="orderDate" name="orderDate" type="date">
  <button type="submit">Submit</button>
</form>