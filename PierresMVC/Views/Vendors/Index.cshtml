@using PierresMVC.Models;
@using System;
@using System.Collections.Generic;

@{
  Layout = "_Layout";
}

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added.</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.VendorName</a></h3>
}
<h3><a href='/vendors/new'>Add New Vendor</a></h3>
<p><a href='/'>Return Home</a></p>