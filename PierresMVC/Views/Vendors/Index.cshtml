@using PierresMVC.Models;

@{
  Layout = "_Layout";
}

<h1>Vendors</h1>
<hr />

@if (@Model.Count == 0)
{
  <h3>No vendors are being tracked at this time.</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3>+ <a href='/vendors/@vendor.Id'>@vendor.VendorName</a></h3>
}
<br>
<p><a href='/vendors/new'>Add New Vendor</a></p>
<p><a href='/'>Return Home</a></p>