@{
  Layout = "_Layout";
}

<h1>Add Vendor</h1>
<hr />

<form action="/vendors" method="post">
  <h3>Vendor Name:</h3>
    <input id="vendorName" name="vendorName" type="text" class="form-control" required>
  <h3>Vendor Description:</h3>
    <input id="vendorDesc" name="vendorDesc" type="text" class="form-control" required>

  <br><br>
  <button type="submit" class="btn btn-primary">Add Vendor</button>
</form>

<br>
